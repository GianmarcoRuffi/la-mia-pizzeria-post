<h1>Pizza</h1>

@model List<Pizza>

    @if(Model.Count() == 0) {<h2 class="text-center">Non sono presenti pizze nell'elenco.</h2>}
    else {
    
    @foreach(Pizza pizza in Model)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">

                    <img src="@pizza.Image" class="img-fluid rounded-start" alt="@pizza.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><a href="@Url.Action("Dettaglio", new {id = pizza.Id})"> @pizza.Name </a></h5>
                        <p class="card-text"></p>
                        <p class="card-title">
                            <strong>
                             @pizza.Prezzo €
                            </strong>
                        </p>
                        <p class="card-text"></p>
                        <p class="card-text"><small class="text-muted">@pizza.Description</small></p>
                    </div>
                </div>
            </div>
        </div>


    }
    
    
    
    }