@model Pizza

<h1>Dettaglio della pizza @Model.Name</h1>


<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="@Model.Image" class="d-block mx-lg-auto img-fluid" alt="@Model.Name" width="700" height="500" loading="in caricamento...">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">@Model.Name</h1>
            <h3>@Model.Prezzo €</h3>
            <p class="lead">@Model.Description</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <button type="button" class="btn btn-outline-secondary btn-lg px-4">Ordina a domicilio!</button>
            </div>
        </div>
    </div>
</div>

